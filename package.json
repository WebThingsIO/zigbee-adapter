{
  "name": "zigbee-adapter",
  "display_name": "Zigbee",
  "version": "0.6.2",
  "description": "Zigbee adapter plugin for Mozilla IoT Gateway",
  "author": "Mozilla IoT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "zigbee"
  ],
  "homepage": "https://github.com/mozilla-iot/zigbee-adapter",
  "dependencies": {
    "bl": "^2.0.1",
    "clone-deep": "^4.0.0",
    "color": "^3.0.0",
    "serialport": "^6.1.1",
    "xbee-api": "^0.5.6",
    "zcl-id": "^0.3.2",
    "zcl-packet": "dhylands/zcl-packet#add-genOta-meta"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-plugin-html": "^4.0.3"
  },
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/zigbee-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/zigbee-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "zb-adapter.js",
    "zb-at.js",
    "zb-classifier.js",
    "zb-constants.js",
    "zb-families.js",
    "zb-family.js",
    "zb-node.js",
    "zb-property.js",
    "zb-xiaomi.js",
    "zb-zdo.js",
    "node_modules"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "scanChannels": 8190,
      "allowFTDISerial": false
    },
    "schema": {
      "type": "object",
      "required": [
        "scanChannels",
        "allowFTDISerial"
      ],
      "properties": {
        "scanChannels": {
          "type": "integer",
          "default": 8190
        },
        "allowFTDISerial": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
