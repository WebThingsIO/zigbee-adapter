{
  "name": "zigbee-adapter",
  "version": "0.3.3",
  "description": "Zigbee adapter plugin for Mozilla IoT Gateway",
  "author": "Mozilla IoT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "zigbee"
  ],
  "homepage": "https://github.com/mozilla-iot/zigbee-adapter",
  "dependencies": {
    "color": "^3.0.0",
    "serialport": "^6.1.1",
    "xbee-api": "^0.5.6",
    "zcl-id": "^0.3.2",
    "zcl-packet": "^0.2.4"
  },
  "devDependencies": {
    "eslint": "^4.19.1"
  },
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/zigbee-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/zigbee-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "zb-adapter.js",
    "zb-at.js",
    "zb-classifier.js",
    "zb-node.js",
    "zb-property.js",
    "zb-zdo.js",
    "node_modules"
  ],
  "moziot": {
    "api": {
      "min": 1,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "scanChannels": 8190
    },
    "schema": {
      "type": "object",
      "required": [
        "scanChannels"
      ],
      "properties": {
        "scanChannels": {
          "type": "integer",
          "default": 8190
        }
      }
    }
  }
}
