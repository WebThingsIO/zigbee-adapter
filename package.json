{
  "name": "zigbee-adapter",
  "version": "0.3.2",
  "description": "Zigbee adapter plugin for Mozilla IoT Gateway",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "zigbee"
  ],
  "homepage": "https://github.com/mozilla-iot/zigbee-adapter",
  "dependencies": {
    "color": "^3.0.0",
    "serialport": "^6.0.4",
    "xbee-api": "^0.5.2",
    "zcl-id": "^0.3.2",
    "zcl-packet": "^0.2.2"
  },
  "devDependencies": {
    "eslint": "^4.7.0",
    "eslint-plugin-html": "^4.0.0"
  },
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/zigbee-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/zigbee-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "zb-adapter.js",
    "zb-at.js",
    "zb-classifier.js",
    "zb-node.js",
    "zb-property.js",
    "zb-zdo.js",
    "node_modules"
  ],
  "moziot": {
    "api": {
      "min": 1,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "scanChannels": "0x1ffe",
      "discoverAttributes": false
    }
  }
}
